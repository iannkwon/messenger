<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SigninActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_signin"
            android:background="#66CDAA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:text="FEELINK"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="42dp"
                android:textColor="#E5E2DB"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"/>

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_email"
                android:hint="E-Mail"
                android:inputType="text"
                android:textColorHint="#E5E2DB"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxLength="25"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_pw"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#E5E2DB"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxLength="15"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_email"
                android:layout_marginTop="10dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_id"
                android:text="ID Save"
                android:textColor="#E5E2DB"
                android:layout_below="@+id/et_pw"
                android:layout_alignLeft="@+id/et_pw"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login"
                android:text="login"
                android:textColor="#E5E2DB"
                android:background="#20B2AA"
                android:layout_below="@+id/cb_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_signup"
                android:text="Signup Click here"
                android:textColor="#E5E2DB"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_login"
                android:layout_alignLeft="@+id/btn_login"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>


    </android.support.constraint.ConstraintLayout>

</layout>