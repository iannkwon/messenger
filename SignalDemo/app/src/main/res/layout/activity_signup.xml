<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_signup"
            android:background="#66CDAA">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="SignUp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="42dp"
            android:textColor="#E5E2DB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_email"
                android:hint="E-Mail"
                android:inputType="text"
                android:textColorHint="#E5E2DB"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxLength="25"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="50dp"/>

            <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_nick"
            android:hint="Nickname"
            android:inputType="text"
            android:textColorHint="#E5E2DB"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/et_email"
            android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_pw"
                android:hint="Password least 6 letter"
                android:inputType="textPassword"
                android:textColorHint="#E5E2DB"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxLength="12"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_nick"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_conpw"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColorHint="#E5E2DB"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxLength="12"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_pw"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_ok"
                android:text="send"
                android:textAlignment="center"
                android:background="#20B2AA"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_conpw"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>


    </android.support.constraint.ConstraintLayout>

</layout>